import javax.swing.JOptionPane;

public class Menu {
	
	public static int EscolherOpcao(){
		
		int opcao = Integer.parseInt(JOptionPane.showInputDialog("1- Cadastrar PET\n2- Listar PET\n3- Deletar PET\n4- Listar PETS\n5- Listar PETS por critério\n6- Sair"));
		return opcao;
	}
	
	public static void main(String[] args) {
		
		int opcaoEscolhida = EscolherOpcao();
		
		while(opcaoEscolhida != 6) {
			if(opcaoEscolhida == 0 || opcaoEscolhida < 0) {
				EscolherOpcao();
			}
			switch(opcaoEscolhida) {
			
			case 1:
				break;
				
			case 2:
				break;
				
				default: System.out.println("Opção Inválida!");
			}
		}
		
	}
}
	
